@model List<VirtualMachineModel>

@{
    ViewBag.Title = "VMs";
}

<div class="card h-100" id="virtual-machines">
    <div class="card-header">
        <div class="float-end btn-group">
            <button class="btn btn-default fa fa-sync" title="Refresh"></button>
        </div>
        <h3 class="mb-0">Virtual machines</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th data-nosort="true" class="d-table-cell d-sm-none">Actions</th>
                    <th>Name</th>
                    <th id="last-state-change">Last state change</th>
                    <th>On time</th>
                    <th class="text-center">Cores</th>
                    <th>Memory</th>
                    <th>MAC</th>
                    <th data-nosort="true" class="text-end d-none d-sm-table-cell">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (VirtualMachineModel vm in Model)
                {
                    <tr>
                        <td class="d-table-cell d-sm-none actions">
                            <div class="btn-group">
                                <button class="btn btn-@Html.Raw(vm.State == VirtualMachineState.Enabled ? "success" : "danger") fa fa-power-off" title="Toggle state" />
                            </div>
                        </td>
                        <td class="name">@vm.Name</td>
                        <td class="last-state-change">@vm.TimeOfLastStateChangeFormatted</td>
                        <td class="on-time">@vm.GetOnTimeFormatted</td>
                        <td class="text-center cores">@vm.CoresAmount</td>
                        <td class="memory">@vm.MemoryTotal @vm.MemoryAllocationUnits</td>
                        <td class="mac">@vm.MAC</td>
                        <td class="text-end d-none d-sm-table-cell actions">
                            <div class="btn-group">
                                <button class="btn btn-@Html.Raw(vm.State == VirtualMachineState.Enabled ? "success" : "danger") fa fa-power-off" title="Toggle state" />
                            </div>
                        </td>
                    </tr>
                }

                <tr class="d-none">
                    <td class="d-table-cell d-sm-none actions">
                        <div class="btn-group">
                            <button class="btn fa fa-power-off" title="Toggle state" />
                        </div>
                    </td>
                    <td class="name"></td>
                    <td class="last-state-change"></td>
                    <td class="on-time"></td>
                    <td class="text-center cores"></td>
                    <td class="memory"></td>
                    <td class="mac"></td>
                    <td class="text-end d-none d-sm-table-cell actions">
                        <div class="btn-group">
                            <button class="btn fa fa-power-off" title="Toggle state" />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
