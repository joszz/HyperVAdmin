@using System.Configuration;
@using System.Diagnostics;
@using System.Web.Hosting;
@using HyperVAdmin.Utilities;

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#4F4F4F">

    <link rel="apple-touch-icon" sizes="76x76" href="Content/Images/Favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="Content/Images/Favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="Content/Images/Favicons/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="Content/Images/Favicons/manifest.json">
    <link rel="mask-icon" href="Content/Images/Favicons/safari-pinned-tab.svg" color="#5bbad5">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Styles/bundle")
</head>
<body>
    @Html.Partial("~/Views/Shared/_Menu.cshtml", ViewData["Sprints"], ViewData)

    <div class="container">
        @RenderBody()
    </div>

    <footer class="navbar navbar-inverse">
        <div class="container">
            <a href="https://github.com/joszz/HyperVAdmin" target="_blank" class="copyright text-muted pull-left">
                Copyright &copy; 2016 @Html.Raw(@DateTime.Now.Year != 2016 ? " - " + DateTime.Now.Year : null)
                Jos Nienhuis | 

                @{
                    Stopwatch stopwatch = (Stopwatch)HttpContext.Current.Items["Stopwatch"];
                    stopwatch.Stop();

                    TimeSpan ts = stopwatch.Elapsed;
                    double elapsed = (double)ts.Milliseconds / 1000;
                    string elapsedTime = String.Format("{0}s", elapsed.ToString());
                }

                Execution time @elapsedTime
            </a>
            <div class="pull-right">
                <div class="btn-group">
                    <a href="@Html.Raw(HtmlUtility.GetVirtualApplicationPath() + "Documentation/_site/")" target="_blank" class="btn btn-default fa fa-link" title="RTFM!"></a>
                </div>
            </div>
        </div>
    </footer>

    <div class="alert"></div>

    <script type="text/javascript">
        var alertTimeout = @ConfigurationManager.AppSettings["AlertTimeout"];
        var refreshInterval = @ConfigurationManager.AppSettings["RefreshInterval"];
        var baseUrl = "@Html.Raw(HtmlUtility.GetVirtualApplicationPath())";
    </script>

    @Scripts.Render("~/bundles/scripts")
</body>
</html>
