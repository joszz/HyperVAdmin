@using System.Configuration;
@using HyperVAdmin.Utilities;

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#4F4F4F">

    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/Images/Favicons/apple-touch-icon.png")">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/Images/Favicons/favicon-32x32.png")" sizes="32x32">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/Images/Favicons/favicon-16x16.png")" sizes="16x16">
    <link rel="manifest" href="@Url.Content("~/Content/Images/Favicons/manifest.json")">
    <link rel="mask-icon" href="@Url.Content("~/Content/Images/Favicons/safari-pinned-tab.svg")" color="#5bbad5">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Styles/bundle")
</head>
<body id="maincontent"
      data-alerttimeout="@ConfigurationManager.AppSettings["AlertTimeout"]"
      data-refreshinterval="@ConfigurationManager.AppSettings["RefreshInterval"]"
      data-baseurl="@Html.Raw(HtmlUtility.GetVirtualApplicationPath())">
    @Html.Partial("~/Views/Shared/_Menu.cshtml", ViewData["Sprints"], ViewData)
    
    <div class="container @Html.Raw(ViewBag.ContainerClass)">
        @RenderBody()
    </div>

    @Html.Partial("~/Views/Shared/_Footer.cshtml")
    @Html.Partial("~/Views/Shared/_ConfirmDialog.cshtml")

    <div class="alert"></div>

    @Scripts.Render("~/bundles/scripts")
</body>
</html>
