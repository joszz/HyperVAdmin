@using System.Diagnostics;

<footer class="navbar navbar-inverse">
    <div class="container">
        <a href="https://github.com/joszz/HyperVAdmin" target="_blank" class="copyright text-muted text-decoration-none">
            &copy; @DateTime.Now.Year
            Jos Nienhuis
            <span class="d-none d-md-inline">
                |
                @{
                    Stopwatch stopwatch = (Stopwatch)HttpContext.Current.Items["Stopwatch"];
                    stopwatch.Stop();

                    TimeSpan ts = stopwatch.Elapsed;
                    double elapsed = (double)ts.Milliseconds / 1000;
                    string elapsedTime = String.Format("{0}s", elapsed.ToString());
                }
                Execution time: @elapsedTime
                |
                Version: @typeof(HyperVAdmin.MvcApplication).Assembly.GetName().Version
            </span>
        </a>
        <div class="float-end">
            <div class="btn-group">
                <button class="btn btn-dark fa fa-arrows-alt rounded-not-mobile"></button>
                <a href="@Html.Raw(HtmlUtility.GetVirtualApplicationPath() + "Documentation/docfx/")" target="_blank" class="btn btn-dark fa fa-question" title="RTFM!"></a>
            </div>
        </div>
    </div>
</footer>