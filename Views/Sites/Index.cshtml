@using HyperVAdmin.Models
@using Microsoft.Web.Administration;

@model List<SiteModel>

<div class="panel panel-primary" id="sites">
    <div class="panel-heading">
        <div class="pull-right btn-group">
            <button class="btn btn-default">
                <i class="fa fa-refresh"></i>
            </button>
        </div>
        <h4>Sites</h4>
    </div>

    <div class="panel-body table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th data-nosort="true">Actions</th>
                    <th>Name</th>
                    <th>Path</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SiteModel site in Model)
                {
                    <tr>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-@Html.Raw(site.State == ObjectState.Stopped ? "danger" : "success") fa fa-power-off" title="Toggle website state"></button>
                                <button class="btn btn-default fa fa-copy" title="Copy path"></button>
                                <a href="@Url.Action("applications", "sites", new { sitename = site.Name })" data-fancybox
                                   class="btn btn-default fa fa-puzzle-piece @(site.Applications.Count == 0 ? "disabled" : null)"></a>

                                <textarea class="offcanvas">@site.PhysicalPath</textarea>

                                @foreach (KeyValuePair<string, string> keyValue in site.Bindings)
                                {
                                    <a href="@keyValue.Value" target="_blank" title="Open website"
                                       class="btn btn-default protocol @Html.Raw(site.State == ObjectState.Stopped ? "disabled" : null)">@keyValue.Key</a>
                                }
                            </div>
                        </td>
                        <td class="name">@site.Name</td>
                        <td>
                            @site.PhysicalPath
                        </td>
                        <td class="text-right"></td>
                    </tr>
                }

                <tr class="hidden">
                    <td>
                        <div class="btn-group">
                            <button class="btn fa fa-power-off" title="Toggle website state"></button>
                            <button class="btn btn-default fa fa-copy" title="Copy path"></button>
                            <a href="@Url.Action("applications", "sites")" data-fancybox
                               class="btn btn-default fa fa-puzzle-piece disabled"></a>
                            <textarea class="offcanvas"></textarea>

                            <a class="btn btn-default protocol hidden" title="Open website" target="_blank"></a>
                        </div>
                    </td>
                    <td class="name"></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>