@model SiteModel

@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/_iFrame.cshtml";
}

<div class="card" id="applications">
    <div class="card-header">
        <h4>Applications</h4>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Binding</th>
                    <th>Path</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Application app in Model.Applications)
                {
                    foreach (KeyValuePair<string, string> keyValue in Model.Bindings)
                    {
                        <tr>
                            <td>
                                <a href="@(keyValue.Value + app.Path)" target="_blank" title="Open website">@keyValue.Key</a>
                            </td>
                            <td>
                                @app.Path
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>